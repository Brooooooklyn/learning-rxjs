{
  "name": "rxjs-todomvc",
  "version": "0.1.0",
  "description": "TODO-MVC implement by RxJS",
  "main": "index.js",
  "scripts": {
    "compile_serve": "tsc ./server/index.ts ./server/global.d.ts -m commonjs --outDir lib --target ES2015 --experimentalDecorators --moduleResolution node --noImplicitAny --noImplicitThis --noImplicitReturns --noUnusedParameters --suppressImplicitAnyIndexErrors",
    "dev": "webpack-dev-server --inline --progress --port 3000  --content-base src",
    "lint": "tslint --type-check -p ./tsconfig.json src/**/*.ts server/**/*.ts",
    "serve": "npm run compile_serve && node lib/index.js",
    "start": "npm-run-all -p serve dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "tsc ./server/index.ts ./server/global.d.ts -m commonjs --outDir lib --target ES2015 --experimentalDecorators --moduleResolution node -w & nodemon lib/index.js",
    "build": "NODE_ENV=production webpack"
  },
  "keywords": [
    "RxJS",
    "TypeScript"
  ],
  "author": "lynweklm@gmail.com",
  "license": "MIT",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "config": "^1.26.1",
    "jquery": "^3.2.1",
    "koa": "^2.3.0",
    "koa-better-body": "^3.0.2",
    "koa-bodyparser": "^4.2.0",
    "koa-router": "^7.2.1",
    "os": "^0.1.1",
    "raw-body": "^2.2.0",
    "rxjs": "^5.4.1",
    "spark-md5": "^3.0.0"
  },
  "devDependencies": {
    "@types/jquery": "^3.2.3",
    "@types/koa": "^2.0.39",
    "@types/koa-bodyparser": "^3.0.23",
    "@types/koa-router": "^7.0.22",
    "@types/node": "~6.0.78",
    "@types/raw-body": "^2.1.4",
    "awesome-typescript-loader": "^3.1.3",
    "css-loader": "^0.28.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^3.0.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.2",
    "raw-loader": "^0.5.1",
    "source-map-loader": "^0.2.1",
    "style-loader": "^0.18.2",
    "to-string-loader": "^1.1.5",
    "tslint": "^5.4.3",
    "tslint-eslint-rules": "^5.0.0",
    "tslint-loader": "^3.5.3",
    "typescript": "^2.4.1",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^3.0.0",
    "webpack-merge": "^4.1.0"
  }
}
